# SkyRate AI Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://skyrate:skyrate_password@localhost:5432/skyrate_db

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=90

# ===========================================
# GOOGLE OAUTH (Optional - for Sign in with Google)
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# AI MODEL API KEYS
# ===========================================
DEEPSEEK_API_KEY=your-deepseek-api-key
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ===========================================
# STRIPE PRICE IDs (Create these in Stripe Dashboard)
# ===========================================
STRIPE_CONSULTANT_MONTHLY_PRICE_ID=price_consultant_monthly_id
STRIPE_CONSULTANT_YEARLY_PRICE_ID=price_consultant_yearly_id
STRIPE_VENDOR_MONTHLY_PRICE_ID=price_vendor_monthly_id
STRIPE_VENDOR_YEARLY_PRICE_ID=price_vendor_yearly_id

# ===========================================
# USAC DATA (Optional - uses public endpoint by default)
# ===========================================
SOCRATA_APP_TOKEN=your-socrata-app-token

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@skyrate.ai

# ===========================================
# APPLICATION
# ===========================================
DEBUG=True
PORT=8000
ENVIRONMENT=development
