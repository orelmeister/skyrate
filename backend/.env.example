# ===========================================
# SkyRate AI Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Application Settings
# ===========================================
APP_NAME=SkyRate AI
APP_VERSION=2.0.0
DEBUG=false
PORT=8000
# development, staging, production
ENVIRONMENT=development

# ===========================================
# Security - REQUIRED IN PRODUCTION
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# Database
# ===========================================
# SQLite (local development)
DATABASE_URL=sqlite:///./skyrate.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/skyrate

# ===========================================
# Redis (for caching and rate limiting)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Authentication
# ===========================================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=90

# ===========================================
# Google OAuth (optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# AI API Keys (at least one required)
# ===========================================
# DeepSeek API
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat

# Google Gemini API
GEMINI_API_KEY=
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Anthropic Claude API
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-latest

# ===========================================
# Stripe Payments - REQUIRED FOR SUBSCRIPTIONS
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Consultant Plan Price IDs
STRIPE_CONSULTANT_MONTHLY_PRICE_ID=price_xxx
STRIPE_CONSULTANT_YEARLY_PRICE_ID=price_xxx

# Vendor Plan Price IDs
STRIPE_VENDOR_MONTHLY_PRICE_ID=price_xxx
STRIPE_VENDOR_YEARLY_PRICE_ID=price_xxx

# ===========================================
# Email / SMTP (optional for notifications)
# ===========================================
GMAIL_USER=
GMAIL_APP_PASSWORD=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# ===========================================
# USAC / Socrata (for E-Rate data)
# ===========================================
SOCRATA_APP_TOKEN=

# ===========================================
# Subscription Pricing (in cents)
# ===========================================
# Consultants: $300/month or $3,000/year
CONSULTANT_MONTHLY_PRICE=30000
CONSULTANT_YEARLY_PRICE=300000
# Vendors: $200/month or $2,000/year
VENDOR_MONTHLY_PRICE=20000
VENDOR_YEARLY_PRICE=200000

# ===========================================
# CORS Allowed Origins
# ===========================================
# Comma-separated list or leave default
# ALLOWED_ORIGINS=http://localhost:3000,https://skyrate.ai
