# SkyRate AI Backend Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Required Configuration
# ===========================================

# Secret key for JWT signing (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# ===========================================
# Database Configuration
# ===========================================

# SQLite (development)
DATABASE_URL=sqlite:///./skyrate.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/skyrate

# ===========================================
# Redis Cache (optional)
# ===========================================

REDIS_URL=redis://localhost:6379

# ===========================================
# Stripe Payment Configuration
# ===========================================

# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs for subscription plans
# Create these in Stripe Dashboard â†’ Products
STRIPE_PRICE_CONSULTANT_MONTHLY=price_...
STRIPE_PRICE_CONSULTANT_YEARLY=price_...
STRIPE_PRICE_VENDOR_MONTHLY=price_...
STRIPE_PRICE_VENDOR_YEARLY=price_...

# ===========================================
# AI API Keys (optional - for AI features)
# ===========================================

# DeepSeek AI
DEEPSEEK_API_KEY=sk-...

# Google Gemini
GEMINI_API_KEY=...

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (if using)
OPENAI_API_KEY=sk-...

# ===========================================
# Email Configuration (optional)
# ===========================================

# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@skyrate.ai

# ===========================================
# CORS Configuration
# ===========================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# USAC API (E-Rate data source)
# ===========================================

# Open E-Rate API (no key required for public data)
USAC_API_BASE_URL=https://opendata.usac.org
