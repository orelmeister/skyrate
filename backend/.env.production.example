# SkyRate Production Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# DATABASE - MySQL on Bluehost
# ===========================================
# Format: mysql+pymysql://username:password@hostname/database_name
# Example: DATABASE_URL=mysql+pymysql://user:pass@173.254.91.77/database_name
DATABASE_URL=mysql+pymysql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST/YOUR_DATABASE

# ===========================================
# SECURITY
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=production
DEBUG=false

# ===========================================
# EXTERNAL APIs
# ===========================================
# Hunter.io for email enrichment
HUNTER_API_KEY=your-hunter-api-key

# OpenAI for AI features
OPENAI_API_KEY=your-openai-api-key

# Stripe for payments
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
